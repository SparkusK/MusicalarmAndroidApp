<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shane.kelly.musicalarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="shane.kelly.musicalarm.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="shane.kelly.musicalarm.EditAlarmActivity"
            android:label="@string/title_activity_edit_alarm"
            android:parentActivityName="shane.kelly.musicalarm.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="HomeActivity" />
        </activity>
        <activity
            android:name="shane.kelly.musicalarm.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="shane.kelly.musicalarm.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="HomeActivity" />
        </activity>
        <activity
            android:name="shane.kelly.musicalarm.PlaylistActivity"
            android:label="@string/title_activity_playlist" >
        </activity>
        <activity
            android:name="shane.kelly.musicalarm.AlarmReceiverActivity"
            android:label="@string/title_activity_alarm_receiver" >
        </activity>
    </application>

</manifest>
